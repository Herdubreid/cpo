<Page
    x:Class="Celin.Pages.NavContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Celin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="using:Celin.Pages"
    xmlns:services="using:Celin.Services"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="Menu" x:DataType="services:MenuItem">
            <NavigationViewItem
                Content="{x:Bind Name}"
                IsEnabled="{x:Bind IsEnabled, Mode=OneWay}"
                ToolTipService.ToolTip="{x:Bind Tooltip}">
                <NavigationViewItem.Icon>
                    <SymbolIcon Symbol="{x:Bind Symbol}" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </DataTemplate>
    </Page.Resources>

    <NavigationView
        Grid.Row="1"
        IsBackButtonVisible="Collapsed"
        ItemInvoked="NavigationView_ItemInvoked"
        MenuItemTemplate="{StaticResource Menu}"
        MenuItemsSource="{x:Bind Nav.MenuItems}"
        PaneDisplayMode="LeftCompact">
        <Frame x:Name="contentFrame" Content="{x:Bind Nav.CurrentPage, Mode=OneWay}" />
    </NavigationView>
</Page>
